<div class="container col-md-10">
<div class="container">
<h2>Корзина</h2>   
<br>
</div>
  {{#if card.length}}
  {{#each card}}
  <div class="card mb-4">
    <div class="row">
      <div class="col-md-3">
        <img src="{{this.img}}" class="img-fluid rounded-start" alt="{{this.name}}">
      </div>
      <div class="col-md-8 mx-auto">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <h6 class="card-title">{{this.price}} ₽</h6>
          <br>
          <br>
          <a class="btn btn-outline-success" style="margin-right: 20px;" href="/cart/{{this._id}}/buy" role="button">Купить карточку</a>
          <a id="deleteBT" href="cart/{{this._id}}/delete"><img src="/img/dustbin.svg" style="width: 20px;"></a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
  <p>Ваша корзина пустая</p>
  {{/if}}
</div>
