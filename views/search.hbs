<div class="container col-md-10">
<div class="container">
    
<h4>Результаты поиска по запросу: <span style="font-style: italic;">{{search}}</span></h4>   
  
</div>
{{#if cards}}
{{#each cards}}
  <div class="card mx-auto">
    <img src="{{this.img}}" class="card-img-top" alt="{{this.name}}">
    <div class="card-body">
      <a class="title" href="/card/{{this._id}}"><h5 class="card-title">{{this.name}}</h5></a>
      <p class="card-text">Состояние: {{this.quality}}</p>
      <h6 class="card-title">{{this.price}} ₽</h6>
      <p class="card-text">Город: {{this.city}}</p>
      <a href="/cart/{{this._id}}/add" class="btn btn-primary">Добавить в корзину</a>
    </div>
  </div>
{{/each}}

{{else}}
<div class="container">
<p>Карточек не найдено</p>  
</div>
{{/if}}
</div>

<style type="text/css">

.container {
  display: flex;
  flex-wrap: wrap;
}

.card {
  margin: 20px;
  width: 17rem;
}

.title {
  text-decoration: none;
  color: black;
}

.btn {
  justify-content: center;
}

.card-img-top {
  width: 17rem;
}

</style>
